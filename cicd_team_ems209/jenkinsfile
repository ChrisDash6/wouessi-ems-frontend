pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                dir('frontend') {
                   git credentialsId: 'Github', url: 'https://github.com/adii3/wouessi-ems-frontend.git', branch: 'feat_ems_qc_209'
                }
            }
        }
        stage('Verify NPM') {
            steps {
                bat 'npm -v'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'npm test'
            }
        }
    }
}